<section ng-show="state === 'cartable'">
    @*<button class="btn btn-success btn-circle pull-left" ng-click="goToPageAdd();"><i class="fa fa-plus"></i></button>*@
    <tree-grid tree-data="tree.data"
               col-defs="tree.colDefs"
               expand-on="tree.expandingProperty"
               expand-to="tree.expandTo"
               icon-leaf="fa fa-circle-o"
               icon-expand="fa fa-plus"
               icon-collapse="fa fa-minus"></tree-grid>
</section>
<section ng-show="['add','edit'].indexOf(state) !== -1">
    <h2 class="main-title" ng-show="state==='edit'">ویرایش</h2>
    <h2 class="main-title" ng-show="state==='add'">افزودن</h2>
    <div class="card-body">
        <div class="form-horizontal">
            <div class="form-group">
                <div class="col-md-10">
                    <label for="CategorySub" class="control-label">نام کنترل</label>
                    <input type="text" class="form-control" ng-required="true" ng-model="Model.ControllerName" />
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-10">
                    <label for="CategorySub" class="control-label">نام اکشن</label>
                    <input type="text" class="form-control" ng-required="true" ng-model="Model.ActionName" />
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-10">
                    <label for="CategorySub" class="control-label">نام فارسی</label>
                    <input type="text" class="form-control" ng-required="true" ng-model="Model.Title" />
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-10">
                    <label for="CategorySub" class="control-label">آدرس</label>
                    <input type="text" class="form-control" ng-required="true" ng-model="Model.RouteUrl" />
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-10">
                    <label for="CategorySub" class="control-label">توضیحات</label>
                    <textarea rows="4" cols="4" class="form-control" ng-required="true" ng-model="Model.Description" />
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-10">
                    <label for="CategorySub" class="control-label">نمایش در لیست</label>
                    <input type="checkbox" class="form-control" ng-required="true" ng-model="Model.Enabled" />
                </div>
            </div>
        </div>
    </div>
    <div class="btn-group-justified pull-left mb-5">
        <button type="submit" ng-click="addPages()" ng-show="state==='add'" class="btn btn-success">افزودن</button>
        <button type="submit" ng-click="editPages()" ng-show="state==='edit'" class="btn btn-primary">ویرایش</button>
        <a href="" ng-click="main.changeState.cartable()" class="btn btn-cancel">بازگشت</a>
    </div>
</section>
<section ng-show="['view'].indexOf(state) !== -1">
    <h2 class="main-title" ng-show="state==='view'">مشاهده</h2>
        <div class="card-body">
            <div class="form-horizontal">
                <div class="form-group">
                    <div class="col-md-10">
                        <label for="CategorySub" class="control-label">نام فارسی</label>
                        <span class="text-success">{{Model.Title}}</span>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-10">
                        <label for="CategorySub" class="control-label">آدرس</label>
                        <span class="text-success">{{Model.RouteUrl}}</span>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-10">
                        <label for="CategorySub" class="control-label">توضیحات</label>
                        <span class="text-success">{{Model.Description}}</span>
                    </div>
                </div>
            </div>
        </div>
        <div class="btn-group-justified pull-left mb-5">
            <button type="button" ng-click="main.changeState.cartable()" class="btn btn-cancel">بازگشت</button>
        </div>
</section>

