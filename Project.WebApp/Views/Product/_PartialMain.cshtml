@model FM.Portal.Core.Model.Product
<div class="container">
    <div class="row">
        <div class="col-md-12">
            <ul class="nav nav-tabs" role="tablist">
                <li class="nav-item">
                    <a class="nav-link active" id="home-tab" data-toggle="tab" href="#informationProduct" role="tab" aria-controls="home" aria-selected="true">
                        <i class="fa fa-files-o"></i>
                        <label>مشخصات</label>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" id="home-tab" data-toggle="tab" href="#descriptionProduct" role="tab" aria-controls="home" aria-selected="true">
                        <i class="fa fa-files-o"></i>
                        <label>توضیحات تکمیلی</label>
                    </a>
                </li>
                @*<li class="nav-item">
                        <a class="nav-link" id="home-tab" data-toggle="tab" href="#commentProduct" role="tab" aria-controls="home" aria-selected="true">
                            <i class="fa fa-comment-o"></i>
                            <label>نظرات کاربران</label>
                        </a>
                    </li>*@
            </ul>
            <div class="tab-content">
                <div id="informationProduct" class="tab-pane fade show active">
                    <ul class="c-params__list mt-3">
                        @if (Model.Meter.HasValue && Model.Meter.Value > 0)
                        {
                            <li>
                                <div class="c-params__list-key">
                                    <span class="block">متراژ</span>
                                </div>
                                <div class="c-params__list-value">
                                    <span class="block">@Model.Meter متر</span>
                                </div>
                            </li>
                        }
                        @if (Model.HasPhone.Value && Model.CountPhone.HasValue && Model.Meter.Value > 0)
                        {
                            <li>
                                <div class="c-params__list-key">
                                    <span class="block">تعداد خط تلفن</span>
                                </div>
                                <div class="c-params__list-value">
                                    <span class="block">@Model.CountPhone عدد</span>
                                </div>
                            </li>
                        }
                        @if (Model.SellingProductType == SellingProductType.فروش)
                        {
                            <li>
                                <div class="c-params__list-key">
                                    <span class="block">قیمت فروش</span>
                                </div>
                                <div class="c-params__list-value">
                                    <span class="block">
                                        @(Model.OrginalPrice != "قیمت توافقی" ? String.Format("{0:C0} تومان", FM.Portal.Core.Common.SQLHelper.CheckDecimalNull(Model.OrginalPrice)).Replace("$", "") : Model.OrginalPrice)
                                    </span>
                                </div>
                            </li>
                        }
                        @if (Model.SellingProductType == SellingProductType.رهن)
                        {
                            <li>
                                <div class="c-params__list-key">
                                    <span class="block">قیمت رهن</span>
                                </div>
                                <div class="c-params__list-value">
                                    <span class="block">
                                        @(Model.PrePayment != "قیمت توافقی" ? String.Format("{0:C0} تومان", FM.Portal.Core.Common.SQLHelper.CheckDecimalNull(Model.PrePayment)).Replace("$", "") : Model.PrePayment)
                                    </span>
                                </div>
                            </li>
                            if (Model.Rent != null && Model.Rent != "0")
                            {
                                <li>
                                    <div class="c-params__list-key">
                                        <span class="block">قیمت اجاره</span>
                                    </div>
                                    <div class="c-params__list-value">
                                        <span class="block">
                                            @(Model.Rent != "قیمت توافقی" ? String.Format("{0:C0} تومان", FM.Portal.Core.Common.SQLHelper.CheckDecimalNull(Model.Rent)).Replace("$", "") : Model.Rent)
                                        </span>

                                    </div>
                                </li>
                            }
                        }
                        @if (Model.SellingProductType == SellingProductType.اجاره)
                        {
                            <li>
                                <div class="c-params__list-key">
                                    <span class="block">قیمت اجاره</span>
                                </div>
                                <div class="c-params__list-value">
                                    <span class="block">
                                        @(Model.Rent != "قیمت توافقی" ? String.Format("{0:C0} تومان", FM.Portal.Core.Common.SQLHelper.CheckDecimalNull(Model.Rent)).Replace("$", "") : Model.Rent)
                                    </span>
                                </div>
                            </li>
                            if (Model.PrePayment != null && Model.PrePayment != "0")
                            {
                                <li>
                                    <div class="c-params__list-key">
                                        <span class="block">قیمت رهن</span>
                                    </div>
                                    <div class="c-params__list-value">
                                        <span class="block">
                                            @(Model.PrePayment != "قیمت توافقی" ? String.Format("{0:C0} تومان", FM.Portal.Core.Common.SQLHelper.CheckDecimalNull(Model.PrePayment)).Replace("$", "") : Model.PrePayment)
                                        </span>

                                    </div>
                                </li>
                            }
                        }
                        @if (Model.FloorCoveringType != FloorCoveringType.نامشخص)
                        {
                            <li>
                                <div class="c-params__list-key">
                                    <span class="block">نوع کف</span>
                                </div>
                                <div class="c-params__list-value">
                                    <span class="block">@Model.FloorCoveringType.ToString().Replace('_', ' ')</span>
                                </div>
                            </li>
                        }
                        @if (Model.DocumentType != DocumentForProductType.نامشخص)
                        {
                            <li>
                                <div class="c-params__list-key">
                                    <span class="block">نوع سند</span>
                                </div>
                                <div class="c-params__list-value">
                                    <span class="block">@Model.DocumentType.ToString().Replace('_', ' ')</span>
                                </div>
                            </li>
                        }
                        @if (Model.CountRoom.HasValue && Model.CountRoom.Value > 0)
                        {
                            <li>
                                <div class="c-params__list-key">
                                    <span class="block">تعداد خواب</span>
                                </div>
                                <div class="c-params__list-value">
                                    <span class="block">@Model.CountRoom عدد</span>
                                </div>
                            </li>
                        }
                    </ul>
                </div>
                <div id="descriptionProduct" class="tab-pane fade show active">
                    <div id="fullDesc" class="mt-3">
                        @Html.Raw(Model.Description)
                    </div>

                </div>
                @*<div id="commentProduct" class="tab-pane fade">
                        <div class="col-md-12 mt-3">
                            @Html.Action("Index", "Comment", new { DocumentID = Model.ID, State = "Product" })
                        </div>
                    </div>*@

            </div>
        </div>
    </div>
</div>

