<footer class="container-fluid mt-3">
    <div class="row p-3">
        <div class="col-md-6">
            <div class="form-group">
                <label class="control-label">آدرس :</label>
                <span>@FM.Portal.Core.Common.Helper.Address</span>
            </div>
            <div class="form-group">
                <label class="control-label">تلفن :</label>
                <span>@FM.Portal.Core.Common.Helper.Phone</span>
            </div>
        </div>
        <div class="col-md-6">
            @if (!FM.Portal.Core.Common.Helper.InstagramUrl.IsEmpty())
            {
                <a href="http://@Html.Raw(FM.Portal.Core.Common.Helper.InstagramUrl)" class="p-1" target="_blank">
                    <i class="fa fa-instagram text-danger"></i>
                </a>
            }
            @if (!FM.Portal.Core.Common.Helper.TelegramUrl.IsEmpty())
            {
                <a href="http://@Html.Raw(FM.Portal.Core.Common.Helper.TelegramUrl)" class="p-1" target="_blank">
                    <i class="fa fa-telegram text-primary"></i>
                </a>
            }
            @if (!FM.Portal.Core.Common.Helper.TwitterUrl.IsEmpty())
            {
                <a href="http://@Html.Raw(FM.Portal.Core.Common.Helper.TwitterUrl)" class="p-1" target="_blank">
                    <i class="fa fa-twitter text-primary"></i>
                </a>
            }
            @if (!FM.Portal.Core.Common.Helper.WhatsAppUrl.IsEmpty())
            {
                <a href="http://@Html.Raw(FM.Portal.Core.Common.Helper.WhatsAppUrl)" class="p-1" target="_blank">
                    <i class="fa fa-whatsapp text-success"></i>
                </a>
            }
            @if (!FM.Portal.Core.Common.Helper.FacebookUrl.IsEmpty())
            {
                <a href="http://@Html.Raw(FM.Portal.Core.Common.Helper.FacebookUrl)" class="p-1" target="_blank">
                    <i class="fa fa-facebook text-primary"></i>
                </a>
            }

        </div>
    </div>
</footer>
